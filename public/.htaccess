# if your app is deployed at a sub-path e.g. /app/
# replace 'RewriteBase /' with 'RewriteBase /app'
# replace 'RewriteRule ^index\.html$ - [L]' with 'RewriteRule ^app/index\.html$ - [L]'
# replace 'RewriteRule . /index.html [L]' with 'RewriteRule . /app/index.html [L]'

# not using apache ? Check out:
# https://router.vuejs.org/guide/essentials/history-mode.html#example-server-configurations

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    RewriteRule ^index\.html$ - [L]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . /index.html [L]
</IfModule>